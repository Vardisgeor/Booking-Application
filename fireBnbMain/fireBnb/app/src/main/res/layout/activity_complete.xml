<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="370sp"
            android:layout_height="300sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img"
            android:rotation="0"/>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="413sp"
            android:layout_height="82sp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/leaguespartanmedium"
            android:text="Your booking has been succesfully submited!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="120sp"
            android:layout_marginTop="50sp"
            android:layout_marginEnd="120sp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="#7B3911"
            android:fontFamily="@font/leaguespartansemibold"
            android:text="Go Back"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>